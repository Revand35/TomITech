rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function untuk cek user sudah login
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function untuk cek user adalah pemilik data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Tambahan: helper validasi koordinat
    function isValidLatitude(lat) {
      return lat is number && lat >= -90 && lat <= 90;
    }
    
    function isValidLongitude(lng) {
      return lng is number && lng >= -180 && lng <= 180;
    }
    
    // Users collection - hanya bisa read/write data sendiri
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // UserStats collection - statistik user (active days, forum posts, materials, dll)
    match /userStats/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(userId);
    }
    
    // Greenhouses collection - user bisa membuat greenhouse sendiri
    match /greenhouses/{greenhouseId} {
      allow read: if isAuthenticated();
      // Tambahan: validasi field name + latitude/longitude saat create
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.name is string
        && (
          request.resource.data.latitude == null
          || isValidLatitude(request.resource.data.latitude)
        )
        && (
          request.resource.data.longitude == null
          || isValidLongitude(request.resource.data.longitude)
        );
      // Tambahan: validasi koordinat juga saat update/delete (pemilik saja)
      allow update, delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid
        && (
          request.resource.data.latitude == null
          || isValidLatitude(request.resource.data.latitude)
        )
        && (
          request.resource.data.longitude == null
          || isValidLongitude(request.resource.data.longitude)
        );
    }
    
    // Plants collection - data tanaman di greenhouse
    match /plants/{plantId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Daily logs - log harian penyiraman dan kondisi
    match /daily_logs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Sensor data - data dari sensor kelembaban dan cahaya (untuk LSTM)
    match /sensor_data/{sensorId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Aggregate data - data agregat untuk Random Forest (prediksi hasil panen & deteksi penyakit)
    match /aggregate_data/{aggregateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // AI summaries - kesimpulan harian dari AI
    match /ai_summaries/{summaryId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Environmental activities - aktivitas lingkungan (legacy, untuk kompatibilitas)
    match /environmental_activities/{activityId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Chat messages - pesan chat dengan AI
    match /chat_messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Chat history - history chat user (alternatif collection name)
    match /chatHistory/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Quiz results - hasil quiz
    match /quizResults/{quizId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Survey responses - hasil survey
    match /surveyResponses/{surveyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Forum posts - postingan di forum
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
    }
    
    // Materials - materi pembelajaran
    match /materi/{materialId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Disease risk alerts - alert risiko penyakit tanaman
    match /disease_risk_alerts/{alertId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Harvest predictions - prediksi hasil panen
    match /harvest_predictions/{predictionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // AI predictions - prediksi dari AI
    match /ai_predictions/{predictionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // AI recommendations - rekomendasi dari AI
    match /ai_recommendations/{recommendationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // User preferences - preferensi user untuk reports (filter, sort, search)
    match /user_preferences/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Report views - analytics tracking untuk report views
    match /report_views/{viewId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated();
      allow update, delete: if false;
    }
    
    // Default: deny semua akses lainnya
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
